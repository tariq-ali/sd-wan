ASR1K-A (Extending MPLS TLOC)

ip route 0.0.0.0 0.0.0.0 10.115.1.1
ip route 0.0.0.0 0.0.0.0 10.116.115.2

interface GigabitEthernet0/0/1
 description MPLS_TRANSPORT
 no shutdown
 ip address 10.115.1.103 255.255.255.0
 negotiation auto
exit

interface GigabitEthernet0/0/3
 description TLOC_EXTENSION
 no shutdown
 ip address 10.115.116.1 255.255.255.252
 negotiation auto
exit
interface GigabitEthernet0/0/4
 description INTERNET_TRANSPORT
 no shutdown
 ip address 10.116.115.1 255.255.255.252
 negotiation auto

interface Tunnel1
 description MPLS_TRANSPORT_TUNNEL
 no shutdown
 ip unnumbered GigabitEthernet0/0/1
 tunnel source GigabitEthernet0/0/1
 tunnel mode sdwan
exit
interface Tunnel4
 description INTERNET_TRANSPORT_TUNNEL
 no shutdown
 ip unnumbered GigabitEthernet0/0/4
 tunnel source GigabitEthernet0/0/4
 tunnel mode sdwan

sdwan
 interface GigabitEthernet0/0/1
  tunnel-interface
   encapsulation ipsec
   color mpls restrict
   no allow-service bgp
   allow-service dhcp
   allow-service dns
   allow-service icmp
   no allow-service sshd
   no allow-service netconf
   no allow-service ntp
   no allow-service ospf
   no allow-service stun
  exit
 exit
 interface GigabitEthernet0/0/3
  tloc-extension GigabitEthernet0/0/1
 exit
 interface GigabitEthernet0/0/4
  tunnel-interface
   encapsulation ipsec
   color public-internet restrict
   max-control-connections 0
   no allow-service bgp
   allow-service dhcp
   allow-service dns
   allow-service icmp
   no allow-service sshd
   no allow-service netconf
   no allow-service ntp
   no allow-service ospf
   no allow-service stun
  exit
 
 ASR1K-B (Extending Internet TLOC)

ip route 0.0.0.0 0.0.0.0 10.115.116.1
ip route 0.0.0.0 0.0.0.0 10.116.1.1

interface GigabitEthernet0/0/2
 description INTERNET_TRANSPORT
 no shutdown
 ip address 10.116.1.104 255.255.255.0
 cdp enable
 negotiation auto
exit
interface GigabitEthernet0/0/3
 description MPLS_TRANSPORT
 no shutdown
 ip address 10.115.116.2 255.255.255.252
 cdp enable
 negotiation auto
exit
interface GigabitEthernet0/0/4
 description TLOC_EXTENSION
 no shutdown
 ip address 10.116.115.2 255.255.255.252
 cdp enable
 negotiation auto
exit

interface Tunnel2
 no shutdown
 ip unnumbered GigabitEthernet0/0/2
 tunnel source GigabitEthernet0/0/2
 tunnel mode sdwan
exit
interface Tunnel3
 no shutdown
 ip unnumbered GigabitEthernet0/0/3
 tunnel source GigabitEthernet0/0/3
 tunnel mode sdwan

sdwan
 interface GigabitEthernet0/0/2
  tunnel-interface
   encapsulation ipsec
   color public-internet restrict
   max-control-connections 0
   no allow-service bgp
   allow-service dhcp
   allow-service dns
   allow-service icmp
   no allow-service sshd
   no allow-service netconf
   no allow-service ntp
   no allow-service ospf
   no allow-service stun
  exit
 exit
 interface GigabitEthernet0/0/3
  tunnel-interface
   encapsulation ipsec
   color mpls restrict
   max-control-connections 2
   no allow-service bgp
   allow-service dhcp
   allow-service dns
   allow-service icmp
   no allow-service sshd
   no allow-service netconf
   no allow-service ntp
   no allow-service ospf
   no allow-service stun
  exit
 exit
 interface GigabitEthernet0/0/4
  tloc-extension GigabitEthernet0/0/2
 exit
